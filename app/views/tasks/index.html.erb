<h1>タスク一覧</h1>

<ul>
<% @tasks.each do |task| %>
  <li><%= link_to task.title, task %> | <%= link_to "削除", task, method: :delete, data: {confirm: '削除してよろしいですか？'} %></li>
  <% end %>
</ul>

<hr>

<h2>タスク登録</h2>
<% if @task.errors.any? %>
  <p style="color:red;"><b>【エラー内容】</b></p>
  <ul>
  <% @task.errors.full_messages.each do |message| %>
    <li style="color:red;"><%= message %></li>
  <% end %>
  </ul>
<% end %>

<%= form_with model: @task, local: true do |form| %>
  <p>
  タイトル <br>
  <%= form.text_field :title %>
  </p>

  <p>
  内容 <br>
  <%= form.text_area :body %></p>

  <%= form.submit "Create Task" %>
<% end %>